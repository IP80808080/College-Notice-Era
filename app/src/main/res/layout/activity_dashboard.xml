<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboardtwo"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:context=".Dashboard">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="124dp"
            android:layout_height="115dp"
            android:src="@drawable/profile"
            app:civ_border_color="@color/white"
            app:civ_border_width="0dp"
            app:layout_constraintBottom_toTopOf="@+id/greetings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.676" />

        <androidx.cardview.widget.CardView
            android:id="@+id/optionCard"
            android:layout_width="413dp"
            android:layout_height="110dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.397" >

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/sop1"
                        android:layout_width="94dp"
                        android:layout_height="83dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="14dp"
                        app:cardCornerRadius="5dp"
                        app:cardBackgroundColor="#1B1B1B" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/notice" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/sop2"
                        android:layout_width="94dp"
                        android:layout_height="83dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="14dp"
                        app:cardCornerRadius="5dp"
                        app:cardBackgroundColor="#1B1B1B" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/attendance" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/sop3"
                        android:layout_width="94dp"
                        android:layout_height="83dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="14dp"
                        app:cardCornerRadius="5dp"
                        app:cardBackgroundColor="#1B1B1B" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/result" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/sop4"
                        android:layout_width="94dp"
                        android:layout_height="83dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="14dp"
                        app:cardCornerRadius="5dp"
                        app:cardBackgroundColor="@color/black">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bc" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/sop5"
                        android:layout_width="94dp"
                        android:layout_height="83dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="14dp"
                        app:cardCornerRadius="5dp"
                        app:cardBackgroundColor="#1B1B1B" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_baseline_3p_24" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/sop6"
                        android:layout_width="94dp"
                        android:layout_height="83dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="14dp"
                        app:cardCornerRadius="5dp"
                        app:cardBackgroundColor="#1B1B1B" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/comingsoon" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/noticeCard"
            android:layout_width="413dp"
            android:layout_height="344dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="387dp"
                    android:layout_height="315dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="167dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="177dp"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.488" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/greetings"
            android:layout_width="260dp"
            android:layout_height="42dp"
            android:text="Welcome User"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/noticeCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.262" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="74dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="175dp"
            android:clickable="true"
            android:focusable="true"
            android:tint="@color/white"
            app:backgroundTint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/optionCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profile_image"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/add" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="111dp"
            android:clickable="true"
            android:focusable="true"
            android:tint="@color/white"
            android:visibility="invisible"
            app:backgroundTint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/optionCard"
            app:layout_constraintEnd_toEndOf="@+id/more"
            app:layout_constraintStart_toStartOf="@+id/more"
            app:layout_constraintTop_toBottomOf="@+id/more"
            app:srcCompat="@drawable/ic_settings" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/logOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="47dp"
            android:clickable="true"
            android:focusable="true"
            android:tint="@color/white"
            android:visibility="invisible"
            app:backgroundTint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/optionCard"
            app:layout_constraintEnd_toEndOf="@+id/setting"
            app:layout_constraintStart_toStartOf="@+id/setting"
            app:layout_constraintTop_toBottomOf="@+id/setting"
            app:srcCompat="@drawable/ic_logout" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
